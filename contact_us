<script>
    $("#contact_link").addClass("active");
    
    $(document).ready(function() {
        
                
        function renderPageData(){
            var propertyDetails = getPropertyDetails();
            renderTemplate("#centre_info_container", "#centre_info_template", propertyDetails)
            renderTemplate("#contact_container", "#contact_template", propertyDetails)
            renderTemplate("#contact_form_container", "#contact_form_template", propertyDetails)
        }
        
        function renderTemplate(container, template, collection){
            
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            item_list.push(collection);
            $.each( item_list , function( key, val ) {
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            $(container).show();
            $(container).html(item_rendered.join(''));
            
        }
        
        loadMallData(renderPageData);
    });
</script>

<style>
    #page_content {
        max-width: 400px;
    }
    #page_content p {
        display: inline-block;
        width: 49%;
    }
</style>

<div class="content_space">
    <h1 id="page_title"></h1>
    <div id="page_content"></div>
    
    

</div>
<script>
    $(document).ready(function(){
        function renderPage(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix + "/pages/twinpines-test-hours.json"
            console.log(pages_json);
            $.getJSON(pages_json).done(function(data) {
                $('#page_title').html(data.title);
                $('#page_content').html(data.body);
                
                $("#page_content p").addClass("hour_item")
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
        }
        loadMallDataCached(renderPage);
    });
</script>